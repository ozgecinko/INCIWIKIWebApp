@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inciwiki</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">

    <!-- Font Awesome Icon Library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Vendor CSS Files -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/lib/venobox/venobox.css" rel="stylesheet">
    <link href="~/lib/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/aos/aos.css" rel="stylesheet">
</head>
<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container-fluid d-flex">

            <div class="logo mr-auto">
                <h1 class="text-light"><a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo/logo.png" alt="" class="img-fluid"><span>INCIWIKI</span></a></h1>
            </div>

            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">@localizer["Home"]</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">INCIWIKI</a></li>
                    <li><a asp-area="" asp-controller="Icerik" asp-action="List">@localizer["Icerik"]</a></li>

                    <li class="drop-down">
                        <a asp-area="" asp-controller="IhtiyacIcerik" asp-action="List">@localizer["Ihtiyac"]</a>
                        <ul>
                            <li><a asp-area="" asp-controller="Problem" asp-action="Akne">@localizer["Acne"]</a></li>
                            <li><a asp-area="" asp-controller="Problem" asp-action="Antibakteriyel">@localizer["Antibacterial"]</a></li>
                            <li><a asp-area="" asp-controller="Problem" asp-action="Antioksidan">@localizer["Antioxidant"]</a></li>
                            <li><a asp-area="" asp-controller="Problem" asp-action="CiltAydinlatici">@localizer["SkinBright"]</a></li>
                            <li><a asp-area="" asp-controller="Problem" asp-action="CiltIyilestirici">@localizer["SkinHeal"]</a></li>
                            <li><a asp-area="" asp-controller="Problem" asp-action="HucreYenileyici">@localizer["Cell"]</a></li>
                            <li><a asp-area="" asp-controller="Problem" asp-action="Surfaktan">@localizer["Surfactan"]</a></li>
                            <li><a asp-area="" asp-controller="Problem" asp-action="Nemlendirici">@localizer["Moust"]</a></li>
                            <li><a asp-area="" asp-controller="Problem" asp-action="Yatistirici">@localizer["Soothing"]</a></li>
                            <li><a asp-area="" asp-controller="Problem" asp-action="GunesKorumasi">@localizer["Sunscreen"]</a></li>
                        </ul>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li class="drop-down">
                                <a asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                                <ul>
                                    <li><a asp-area="" asp-controller="Admin" asp-action="UsersList">Kullanıcı Listesi</a></li>
                                    <li><a asp-area="" asp-controller="Icerik" asp-action="Index">İçerikler</a></li>
                                    <li><a asp-area="" asp-controller="Ihtiyac" asp-action="Index">İhtiyaçlar</a></li>
                                    <li><a asp-area="" asp-controller="IhtiyacIcerik" asp-action="Index">İhtiyaçların İçerikleri</a></li>
                                </ul>
                            </li>
                        }
                    }

                    <partial name="_LoginPartial" />

                    <li><partial name="_Cookie" /></li>

                </ul>
            </nav><!-- .nav-menu -->

        </div>
    </header><!-- End Header -->


    <main id="main">


        @RenderBody()
    </main>

    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="footer-newsletter">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <h4>@localizer["Join"]</h4>
                        <p>@localizer["Bildirim"]</p>
                        <form action="" method="post">
                            <input type="email" name="email"><input type="submit" value="Abone Ol">
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>INCIWIKI</h3>
                        <p>
                            @localizer["INCIWIKI"]
                        </p>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>INCI</h3>
                        <p>
                            @localizer["INCI"]
                        </p>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>@localizer["Contact"]</h3>
                        <p>
                            <strong>Email:</strong> inciwiki@info.com
                        </p>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>@localizer["Join"]</h4>
                        <p>@localizer["Social"]</p>
                        <div class="social-links mt-3">
                            <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                            <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                            <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                            <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="container py-4">
            <div class="copyright">
                &copy; Copyright <strong><span>Ninestars</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/ninestars-free-bootstrap-3-theme-for-creative/ -->
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
            </div>
        </div>
    </footer><!-- End Footer -->
    <!-- Vendor JS Files -->
    <script src="~/lib/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/lib/venobox/venobox.min.js"></script>
    <script src="~/lib/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/lib/aos/aos.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>