<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inciwiki</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/slicknav.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <header>
        <!-- Header Start -->
        <div class="header-area">
            <div class="main-header header-sticky">
                <div class="container">
                    <div class="row align-items-center">
                        <!-- Logo -->
                        <div class="col-xl-2 col-lg-2 col-md-1">
                            <div class="logo">
                                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo/logo.png" alt=""></a>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6">
                            <!-- Main-menu -->
                            <div class="main-menu f-right d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                                        <li><a asp-area="" asp-controller="Home" asp-action="About">INCIWIKI</a></li>
                                        <li><a asp-area="" asp-controller="Home" asp-action="Index">İçerikler</a></li>
                                        <li>
                                            <a asp-area="" asp-controller="Home" asp-action="Index">İhtiyaçlar</a>
                                            <ul class="submenu">
                                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Akne Karşıtı</a></li>
                                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Antibakteriyel</a></li>
                                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Antioksidan</a></li>
                                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Cilt Aydınlatıcı</a></li>
                                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Cilt İyileştirici</a></li>
                                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Hücre Yenileyici</a></li>
                                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Sürfaktan</a></li>
                                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Nemlendirici</a></li>
                                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Yatıştırıcı</a></li>
                                                <li><a asp-area="" asp-controller="Home" asp-action="Index">Güneş Koruması</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-2 col-md-2">
                            <div class="header-right-btn f-right d-none d-md-block">
                                <a class="btn header-btn" asp-area="" asp-controller="Home" asp-action="Index">Giriş Yap</a>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-2 col-md-2">
                            <div class="header-right-btn f-right d-none d-lg-block">
                                <a class="btn header-btn" asp-area="" asp-controller="Home" asp-action="Index">Üye Ol</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header End -->
    </header>

    <main>
          @RenderBody()

    </main>


    <!-- Footer Start-->
    <footer>
        <div class="footer-main" data-background="~/img/shape/footer_bg.png">
            <div class="footer-area footer-padding">
                <div class="container">
                    <div class="row d-flex justify-content-between">
                        <div class="col-lg-6 col-md-6 col-sm-8">
                            <!-- logo -->
                            <div class="footer-logo">
                                <img src="~/img/logo/logo2_footer.png" alt="">
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-8">
                            <div class="footer-tittle">
                                <div class="footer-pera">
                                    <p class="info1">221B Baker Street, P.O Box 353 Park <br> Road, USA - 215431</p>
                                    <p class="info2">info@yourdomain.com</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- footer-bottom aera -->
            <div class="footer-bottom-area footer-bg">
                <div class="container">
                    <div class="footer-border">
                        <div class="row d-flex align-items-center">
                            <div class="col-xl-12 ">
                                <div class="footer-copy-right text-center">
                                    <p>
                                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                        Template Copyright &copy;
                                        This template is made with by <a href="https://colorlib.com">Colorlib</a>
                                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End-->
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
