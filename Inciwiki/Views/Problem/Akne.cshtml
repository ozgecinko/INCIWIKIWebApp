@model IEnumerable<Inciwiki.Models.IhtiyacIcerik>

@{
    ViewData["Title"] = "Akne Karşıtı";
}

<!-- ======= Services Section ======= -->
<section id="services" class="services section-bg">
    <div class="container">

        <div class="section-title">
            <h2>Akne Karşıtı</h2>
        </div>

        @foreach (var item in Model)
        {
            @if (item.Ihtiyac.IhtiyacAdi == "Akne Karşıtı")
            {
                <div class="row">

                    <div class="col">


                        <div class="icon-box">
                            <div class="icon"><img src="@Url.Content(item.Icerik.IcerikResmi)" class="d-block w-50" asp-append-version="true" /></div>
                            <h4 class="title"><a href=""> @Html.DisplayFor(modelItem => item.Icerik.IcerikAdi)</a></h4>
                            <p class="description">@Html.DisplayFor(modelItem => item.Icerik.Aciklamasi)</p>
                        </div>


                    </div>

                </div>
                }
            }
    </div>
</section><!-- End Services Section -->
