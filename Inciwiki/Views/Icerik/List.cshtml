@model IEnumerable<Inciwiki.Models.Icerik>

@{
    ViewData["Title"] = "List";
}

<!-- ======= Services Section ======= -->
<section id="services" class="services section-bg">
    <div class="container">

        <div class="section-title">
            <h2>İçerikler</h2>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3 d-flex align-items-stretch">
                    <div class="icon-box">
                        <div class="icon"><img src="@Url.Content(item.IcerikResmi)" class="d-block w-50" asp-append-version="true" /></div>
                        @for (int i = 0; i < item.Puani; i++)
                        {<span class="fa fa-star checked"></span>}
                        <h4 class="title"><a href=""> @Html.DisplayFor(modelItem => item.IcerikAdi)</a></h4>
                        <p class="description">@Html.DisplayFor(modelItem => item.Aciklamasi)</p>
                    </div>
                </div>
            }
        </div>


    </div>
</section><!-- End Services Section -->